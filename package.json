{
  "name": "twine-formatter-gd",
  "version": "0.1.0",
  "description": "A Twine Story Format for nostalgia",
  "scripts": {
    "build-debug": "node scripts/build.mjs",
    "build-release": "node scripts/build.mjs --release",
    "build-step1-debug": "node scripts/build.mjs --combineonly",
    "build-step1-release": "node scripts/build.mjs --combineonly --release",
    "build-sample": "node scripts/build.mjs --sample",
    "build-sample-release": "node scripts/build.mjs --sample --release",
    "clean": "node scripts/build.mjs --cleanall",
    "build": "node scripts/build.mjs",
    "publish": "node scripts/build.mjs --cleanall && node scripts/build.mjs --release",
    "dev": "node scripts/dev-server.mjs"
  },
  "author": "Raj Chaudhuri",
  "license": "MIT",
  "devDependencies": {
    "@minify-html/node": "^0.15.0",
    "alive-server": "^1.3.0",
    "chokidar": "^3.6.0"
  }
}
